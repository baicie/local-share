{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "sourceMap": true,
      "removeComments": false,
      "declaration": false,
      "composite": false,
      "incremental": true,
      "tsBuildInfoFile": "temp/.tsbuildinfo"
    },
    "include": [
      "packages/*/src",
      "packages/*/__tests__",
      "scripts/*",
      "*.ts",
      "*.tsx"
    ]
  }