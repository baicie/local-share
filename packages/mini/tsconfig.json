{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2018",
    "lib": ["ES2018"],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@mini/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["@tarojs/taro"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "config/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../shared" }
  ]
}