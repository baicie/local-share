{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@desktop/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["node", "electron"],
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "electron-builder.json"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "references": [
    { "path": "../shared" }
  ]
}