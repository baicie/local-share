{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "paths": {
      "@shared/*": ["../shared/src/*"],
      "@mobile/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    "types": ["react-native", "node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "index.js",
    "metro.config.js"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "android",
    "ios"
  ],
  "references": [
    { "path": "../shared" }
  ]
}