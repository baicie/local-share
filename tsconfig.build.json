{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "types": ["node"],
    "declaration": true,
    "emitDeclarationOnly": true,
    "stripInternal": true,
    "composite": false,
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "packages/*/src"
  ],
  "exclude": [
    "**/__tests__",
    "**/dist",
    "**/temp",
    "**/playground",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}